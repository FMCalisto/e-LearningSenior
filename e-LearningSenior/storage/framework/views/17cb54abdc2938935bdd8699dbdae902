<?php $__env->startSection('content'); ?>

<div class="col-md-12">

  <p>
    <a href="/lists/create" class="btn btn-success">Create a New List</a>
  </p>

<h1>Your Lists</h1>

  <?php if(count($lists) > 0): ?>

      <table class="table table-striped">
      <thead>
      <tr>
        <th>Name</th>
        <th>Description</th>
        <th>Created On</th>
        <th>Remaining Tasks</th>
        <th></th>
        <th></th>
      </tr>
      </thead>
      <tbody>
      <?php foreach($lists as $list): ?>

        <tr>
          <td>
            <a href="<?php echo e(URL::route('lists.show', $list->id)); ?>"><?php echo e($list->name); ?></a>
          </td>
          <td>
            <?php echo e($list->description); ?>

          </td>
          <td>
            <?php echo e(date("F d, Y", strtotime($list->created_at))); ?>

          </td>
          <td>
            <?php echo e($list->remainingTasks()); ?> / <?php echo e($list->tasks()->count()); ?>

          </td>
          <td>
            <a class="btn btn-success" href="<?php echo e(URL::route('lists.edit', $list->id)); ?>">Edit</a>
          </td>
          <td>
            <?php echo Form::open(array('route' => array('lists.destroy', $list->id), 'method' => 'delete')); ?>

              <button type="submit" class="btn btn-success" href="<?php echo e(URL::route('lists.destroy', $list->id)); ?>" title="Delete list">
              Delete
              </button>
            <?php echo Form::close(); ?>

          </td>
        </tr>

      <?php endforeach; ?>
      </tbody>
      </table>

    <?php echo $lists->render(); ?>


    <?php else: ?>
     <p>
      You haven't created any lists. No time like now! <a href="/lists/create">Create a list</a>
    </p>
    <?php endif; ?>

</div>

<?php $__env->stopSection(); ?>
