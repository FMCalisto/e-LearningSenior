    <?php $__env->startSection('footer_js'); ?>
    <script>
      $.ajax({
        url: "http://status.App.com/lists/count",
        dataType: 'jsonp',
        crossDomain: true,
        success: function(data) {
          $('#list_count').html(data.count + " lists created!");
        },
        error: function(data) {
          $('#list_count').html('Squawk!');
        }
      });
    </script>
    <?php $__env->stopSection(); ?>

